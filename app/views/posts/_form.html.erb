<%= render 'shared/errors', obj: @post %>

<%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
  <%= f.label :title, class: "control-label col-md-2"%>
  <div class="col-md-8">
    <%= f.text_field :title, class: "form-control", placeholder: "Type your title...", autofocus: true  %>
  </div>
</div>

<div class="form-group">
  <%= f.label :text, class: "control-label col-md-2" %>
  <div class="col-md-8">
    <%= f.text_area :text, rows:10,  class: "form-control", placeholder: "Type your title..."  %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-primary btn-lg " %>
  </div>
</div>
<% end %>


