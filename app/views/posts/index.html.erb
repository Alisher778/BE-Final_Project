<% @posts.each do |post| %>
<div class="row">
  <div class="well wel-lg">
    <ul class="listing">
      <li>
      <%= link_to image_tag(post.user.photo.url(:small), class: 'round'), user_path(post.user) %> <small><%= link_to post.user.email %></small>
        <li align="center " id="post-title"><strong><%= link_to post.title, topic_posts_path(post)%></strong></li>
      </li>
    </ul>
    <p align="justify"><%= post.text %></p>
    <div class="article-meta-details">
        <small>Created by: <%= link_to post.user.try(:first_name)%>,
        <%= time_ago_in_words(post.created_at) %> ago,

      last updated: <%= time_ago_in_words(post.updated_at) %> ago</small>
    </div>
      <% if current_user %>
        <div class="article-actions" id="buttons">
          <%= link_to "Edit", class: "btn btn-xs btn-primary" %>
          <%=  link_to "Delete", method: :delete, data: {confirm: "Are 
            you sure you want to delete it?"}, class: "btn btn-xs btn-danger" %>
        </div>
      <% end %>
  </div>
</div>
<% end %>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>

