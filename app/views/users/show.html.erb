<h2 align="center">Welcome <%= @user.first_name %>! This is your Profile page</h2>
  <div align="center">
    <%= image_tag @user.photo.url(:medium), class: 'img-circle'%>
  </div>
  
<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>
<p>Number of my posts: <%= link_to @user.posts.count  %></p>

<%= render 'posts', obj: @user.posts %>

